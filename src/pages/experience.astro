---
import Layout from "../layouts/Layout.astro"; // match working path
import { experiencePageContent } from "../config"; // match working path
---

<Layout seo={experiencePageContent.seo}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <h1 class="font-bold text-3xl mb-1">Experience</h1>
    <p class="opacity-60 mb-10">{experiencePageContent.subtitle}</p>

    <div class="border-l-2 border-gray-300 pl-6 space-y-10">
      {experiencePageContent.timeline.map(({ year, title, description }) => (
        <div class="relative">
          <div class="absolute -left-[0.7rem] top-1.5 w-3 h-3 bg-gray-800 rounded-full"></div>
          <p class="text-sm text-gray-500">{year}</p>
          <h2 class="text-xl font-semibold mt-1">{title}</h2>
          <p class="text-gray-700 mt-1">{description}</p>
        </div>
      ))}
    </div>
  </section>
</Layout>