---
import Layout from "../layouts/Layout.astro";
import { projectPageContent } from "../config";  // Assuming your content is now projectPageContent
import ProjectCard from "../components/ProjectCard.astro";
---

<Layout seo={projectPageContent.seo}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <h1 class="font-bold text-3xl mb-1">Projects</h1>
    <p class="opacity-60 mb-10">{projectPageContent.subtitle}</p>
    <div class="grid grid-cols-1 gap-10">
      {
        [...projectPageContent.mainQuests, ...projectPageContent.sideQuests].map((project) => (
          <ProjectCard {...project} />
        ))
      }
    </div>
  </section>
</Layout>