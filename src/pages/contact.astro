---
import Layout from "../layouts/Layout.astro";
import { contactPageContent } from "../config";
---

<Layout seo={contactPageContent.seo}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <h1 class="font-bold text-3xl mb-1">Contact</h1>
    <p class="opacity-60 mb-10">{contactPageContent.subtitle}</p>

    <div class="space-y-8">
      <div class="mb-8">
        <h2 class="font-semibold text-2xl">Contact Details</h2>
        <p class="mt-3">Email: <a href={`mailto:${contactPageContent.contactDetails.email}`} class="text-blue-500">{contactPageContent.contactDetails.email}</a></p>
        <p>Phone: <a href={`tel:${contactPageContent.contactDetails.phone}`} class="text-blue-500">{contactPageContent.contactDetails.phone}</a></p>
        <p>Location: {contactPageContent.contactDetails.location}</p>
      </div>

      <div class="mb-8">
        <h2 class="font-semibold text-2xl">Follow Me</h2>
        <ul class="flex space-x-4 mt-3">
          {contactPageContent.socialLinks.map((link) => (
            <li>
              <a href={link.url} class="text-blue-500" target={link.external ? "_blank" : "_self"}>
                <i class={`mdi ${link.icon} text-xl`}></i> {link.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </section>
</Layout>